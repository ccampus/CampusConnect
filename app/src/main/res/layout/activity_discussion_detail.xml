<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/mem"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sid.campusconnect.DiscussionDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Subject :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/DisSubject"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/discussTopic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/discssStatus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/discussStatus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Opened By :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/DisOpenedBy"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/discussOpenedBy"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Members :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/DisMembers"
        />


</LinearLayout>
