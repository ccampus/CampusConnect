<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sid.campusconnect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".sampleapp"
        android:allowBackup="true"
        android:icon="@drawable/campuslogo1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Campus Connect" />
        <activity
            android:name=".checker"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Signup"
            android:label="Sign UP!"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ForgotPassword"
            android:label="Forgot Password"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".EmailReverify"
            android:label="Resend Email Confirmation"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".Universal"
            android:label="@string/title_activity_universal" />
        <activity
            android:name=".SignUpAdmin"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".Home"/>
        <activity android:name=".SignUpDetails" />
        <activity
            android:name=".Proceed"
            android:label="@string/title_activity_proceed"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
