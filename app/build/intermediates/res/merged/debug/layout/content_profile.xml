<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sid.campusconnect.Profile"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:layout_width="wrap_content"
        android:text="Sarthak Dadhakar"
        android:layout_height="35dp"
        android:id="@+id/pro_fullname"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imgview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="username"
        android:id="@+id/pro_uname"
        android:layout_alignTop="@+id/pro_fullname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="email@email.com"
        android:id="@+id/pro_email"
        android:layout_below="@+id/pro_uname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Department"
        android:id="@+id/pro_dept"
        android:layout_alignTop="@+id/pro_email"
        android:layout_alignRight="@+id/pro_uname"
        android:layout_alignEnd="@+id/pro_uname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Profile Picture"
        android:id="@+id/pro_dp"
        android:layout_below="@+id/pro_dept"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/pro_btn_dp"
        android:layout_height="35dp"
        android:layout_width="80dp"
        android:text="select"
        android:textSize="12sp"
        android:layout_alignTop="@+id/pro_dp"
        android:layout_alignLeft="@+id/pro_dept"
        android:layout_alignStart="@+id/pro_dept" />
    <Button
        android:id="@+id/pro_btn_done"
        android:layout_height="45dp"
        android:layout_width="80dp"
        android:text="Done"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/pro_dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgview"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:isIndicator="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/pro_btn_done"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
