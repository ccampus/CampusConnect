<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sid.campusconnect.QuestionDetail">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/QsUserType"
        android:layout_centerHorizontal="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upvote"
            android:id="@+id/Upvote"
            android:onClick="UpvoteQsHandler"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Downvote"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="DownvoteQsHandler"
            android:id="@+id/Downvote" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write Ans"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="WriteAnsHandler"
            android:id="@+id/WriteAns" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discuss"
            android:layout_marginRight="5dp"
            android:id="@+id/discuss"
            android:onClick="DiscussQsHandler" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Staff"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="AskStaffHandler"
            android:id="@+id/askstaff"
            android:layout_weight="0.16" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Qs"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:onClick="ReportQsHandler"
            android:id="@+id/reportqs" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsTitle"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/QsDownvotes"
        android:layout_alignStart="@+id/QsDownvotes" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsDescription"
        android:layout_below="@+id/QsTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category : "
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsCategory"
        android:layout_below="@+id/QsDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsUserName"
        android:layout_below="@+id/QsCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upvotes : "
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsUpvotes"
        android:layout_below="@+id/QsUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Downvotes :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsDownvotes"
        android:layout_below="@+id/QsUpvotes"
        android:layout_alignRight="@+id/QsDescription"
        android:layout_alignEnd="@+id/QsDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Added At :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsAddTime"
        android:layout_below="@+id/QsDownvotes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Type :"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#33CC33"
        android:id="@+id/QsUserType"
        android:layout_below="@+id/QsAddTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView19"
        android:layout_alignTop="@+id/QsUserType"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView20"
        android:layout_alignBottom="@+id/QsAddTime"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView21"
        android:layout_alignBottom="@+id/QsDownvotes"
        android:layout_toRightOf="@+id/QsDownvotes"
        android:layout_toEndOf="@+id/QsDownvotes"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView22"
        android:layout_alignBottom="@+id/QsUpvotes"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView23"
        android:layout_alignBottom="@+id/QsUserName"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView24"
        android:layout_alignBottom="@+id/QsCategory"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView25"
        android:layout_alignBottom="@+id/QsDescription"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView26"
        android:layout_alignBottom="@+id/QsTitle"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="View Profile "
        android:id="@+id/textView27"
        android:textColor="#0a0220"
        android:onClick="UserProfileHandler"
        android:clickable="true"
        android:layout_alignTop="@+id/textView23"
        android:layout_toRightOf="@+id/textView23"
        android:layout_toEndOf="@+id/textView23"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

</RelativeLayout>
